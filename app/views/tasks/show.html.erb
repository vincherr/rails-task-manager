<h1>My task</h1>
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
<i class="far fa-check-square"></i>
<% else %>
<i class="far fa-square" ></i>
<% end %>

<%= link_to "Update task", edit_task_path(@task)%>
<%= link_to "back to list", tasks_path %>
<%= link_to task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
            <i class='far fa-trash-alt'> x </i>
            <% end %>
